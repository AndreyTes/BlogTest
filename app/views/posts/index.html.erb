<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<div style="margin-bottom: 10px">
  <%= link_to "New post", new_post_path, class: "btn btn-primary" %>
</div>

<div style="margin-bottom: 10px">
<%= link_to 'Show my posts', posts_path(user: "current_user"), class: "btn btn-primary btn-block" %>
</div>

<div style="margin-bottom: 10px">
<%= link_to 'Show all posts', posts_path, class: "btn btn-primary btn-block" %>
</div>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <div class="row", style="margin-bottom: 10px">
      <div class="col-md-2">
       <%= link_to "Show this post", post, class: "btn btn-primary btn-block" %>
      </div>
      <% if post.user_id == current_user.id %> 
      <div class="col-md-2">
        <%= button_to "Delete post", post, method: :delete, class: "btn btn-primary btn-block" %>
      </div>
      <% end %> 
    </div>
  <% end %>
</div>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
